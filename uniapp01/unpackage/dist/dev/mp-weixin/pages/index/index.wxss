.indexContainer .hander {
  display: flex;
  padding: 10rpx 5rpx;
}
.indexContainer .hander .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx;
}
.indexContainer .hander .search {
  width: 420rpx;
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  position: relative;
  margin: 0 10rpx;
}
.indexContainer .hander .search .iconfont {
  position: absolute;
  font-size: 40rpx;
  left: 10rpx;
  top: 10rpx;
}
.indexContainer .hander .search input {
  width: 360rpx;
  height: 60rpx;
  margin-left: 60rpx;
}
.indexContainer .hander .search input .placeholder {
  font-size: 26rpx;
}
.indexContainer .hander button {
  width: 144rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  padding: 0 40rpx;
}
.indexContainer .navScroll {
  display: flex;
  height: 80rpx;
  white-space: nowrap;
}
.indexContainer .navScroll .navitem {
  display: inline-block;
  height: 40rpx;
  padding: 10rpx;
  font-size: 26rpx;
}
.indexContainer .navScroll .navitem.active {
  border-bottom: 3rpx solid #bb2c08;
}

